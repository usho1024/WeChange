- if tweet.favorited_by?(current_user)
  = link_to user_tweet_favorites_path(tweet.user, tweet), method: :delete, remote: true, class: "text-danger fas" do
    span.fa-heart
    |  
    = tweet.favorites.count
- else
  = link_to user_tweet_favorites_path(tweet.user, tweet), method: :post, remote: true, class: "text-muted far" do
    span.fa-heart
    |  
    = tweet.favorites.count