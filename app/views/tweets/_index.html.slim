.contents
  - tweets.each do |tweet|
    .tweet.container id="tweet_#{tweet.id}" class="border-bottom py-3"
      .row.align-items-center
        .image
          = link_to user_path(tweet.user) do
            - if tweet.user.image.attached?
              = image_tag tweet.user.image.variant(resize:'50x50'), class: 'rounded-circle'
            - else
              = image_tag 'no-image-icon.jpg', class: 'rounded-circle'
        .name.font-weight-bold.ml-3
          = link_to tweet.user.name, user_path(tweet.user), class: "text-dark"
      .row
        .body.pt-2
          = link_to user_tweet_path(tweet.user, tweet), class: 'text-dark' do
            = simple_format(tweet.body)
            - if tweet.images.attached?
              - tweet.images.each do |image|
                = image_tag image.variant(resize: '150').processed, class: 'mr-2 mb-3'
      .row
        .favorite-btn.col-3.col-md-2
          = render "favorites/favorite-btn", tweet: tweet
        .replies-count.col-3.col-md-2
          span.far.fa-comment
            |  
            = tweet.replies.count
      .row.align-items-end
        .time
          = tweet.created_at.strftime('%Y/%m/%d　%H:%M:%S')
        - if tweet.user == current_user
          .delete-btn.ml-auto
            = link_to 'つぶやきを削除', user_tweet_path(tweet.user, tweet), method: :delete, class: "btn btn-sm btn-outline-danger px-3 font-weight-bold rounded-pill"
  = paginate tweets